<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.2.0" name="com.ibm.ws.webcontainer.vhostmgr" immediate="true">
  <property name="service.vendor" type="String" value="IBM"/>
  <service>
    <provide interface="com.ibm.ws.webcontainer.osgi.DynamicVirtualHostManager"/>
  </service>
  <reference name="locationService" cardinality="1..1" interface="com.ibm.wsspi.kernel.service.location.WsLocationAdmin" bind="setLocationService" unbind="unsetLocationService"/>
  <reference name="scheduledExececutor" cardinality="1..1" interface="java.util.concurrent.ScheduledExecutorService" bind="setScheduledExececutor" unbind="unsetScheduledExececutor"/>
  <reference name="virtualHost" cardinality="0..n" policy="dynamic" interface="com.ibm.wsspi.http.VirtualHost" target="(enabled=true)" bind="setVirtualHost" unbind="unsetVirtualHost" updated="updatedVirtualHost"/>
  <implementation class="com.ibm.ws.webcontainer.osgi.DynamicVirtualHostManager"/>
</scr:component>
