  <property name="type" type="String" value="ear"/>
  <property name="service.vendor" type="String" value="IBM"/>
  <service>
    <provide interface="com.ibm.wsspi.application.handler.ApplicationHandler"/>
  </service>
  <reference name="FutureMonitor" policy="dynamic" interface="com.ibm.ws.threading.FutureMonitor" bind="setFutureMonitor" unbind="unsetFutureMonitor"/>
  <reference name="deployedAppFactory" interface="com.ibm.ws.app.manager.module.DeployedAppInfoFactory" target="(type=ear)" bind="setDeployedAppFactory" unbind="unsetDeployedAppFactory"/>
  <implementation class="com.ibm.ws.app.manager.ear.internal.EARApplicationHandlerImpl"/>
</scr:component>
